    HWN I
       
    :map_hardware
        SUB I, 1
        HWQ I
        IFE B, 0x40E4
            IFE A, 0x1D9D
                SET [DEV_SLEEP], I
        IFE B, 0x7349     
            IFE A, 0x043C
                SET [DEV_DISPLAY], I
        IFE B, 0x30CF
            IFE A, 0x7406
                SET [DEV_KEYBOARD], I
        IFE B, 0x12D0
            IFE A, 0xB402
                SET [DEV_CLOCK], I
        IFN I, 0
            SET PC, map_hardware
     
    :init_monitor
        SET A, 0
        SET B, 0x8000
            HWI [DEV_DISPLAY]
        SET A, 1
        SET B, 0x7000
            HWI [DEV_DISPLAY]

    :splash_render
        SET I, 0
        SET J, 0x7000
        :loop_attributes
        STI [J], [I + ATTRIBUTES]
        IFL I, 128
           SET PC, loop_attributes 
            
        SET I, 0
        SET J, 0x8000
        :loop_bitplane
        STI [J], [I + BITPLANE]
        IFL I, 128
           SET PC, loop_bitplane 
        
       
    :end SET PC, end
     
