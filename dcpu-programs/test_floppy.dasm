dat 0x0000
:l_reading      ; Reading
dat 0xB052, 0xF065, 0xF061, 0xF064, 0xF069, 0xF06e, 0xF067, 0xF020, 0xF020
dat 0x0000
:l_finish       ; Finish
dat 0xA046, 0xF069, 0xF06e, 0xF069, 0xF073, 0xF068, 0xF020, 0xF020, 0xF020
dat 0x0000
:l_press       ; Press Key
dat 0xF050, 0xF052, 0xF065, 0xF073, 0xF073, 0xF020, 0xF04B, 0xF065, 0xF079
